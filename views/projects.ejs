<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects page</title>
    <link rel="stylesheet" href="/public/css/project.css">
</head>
<body>
    <section class="todo-container">
    <h1>ToDo List</h1>
        <section class="todo">
            <form action="/" method="POST" class="todo-header">
                <input type="text" name="title" placeholder="title">
                <textarea rows="6" cols="45" name="content" placeholder="Content"></textarea>
                <input type="date" name="deadline">
                <button type="submit">&#128190; Add Task</button>
            </form>
            <ul class="todo-list">
                <% projectsList.forEach(task => { %>
                <li class="todo-list-item">
                    <div class="todo-list-item-title">
                        <%= task.title %>
                    </div>
                    <div class="todo-list-item-content">
                        <%= task.content %>
                    </div>
                    <a href="/edit/<%=task._id %>" class="edit">&#128221;</a>
                    <a href="/remove/<%=task._id %>" class="remove">&#128473;</a>
                </li>
                <% }) %>
            </ul>
        </section>
    </section>
</body>
</html>